<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.taxishare">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
            android:name=".app.AppInitializer"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity
                android:name=".Main2Activity"
                android:label="@string/title_activity_main2"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <service
                android:name=".service.MyFirebaseMessagingService"
                android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>

            <!-- Custom Icon 설정 방법 -->
            <!-- <meta-data android:name="com.google.firebase.messaging.default_notification_icon" -->
            <!-- android:resource="@drawable/ic_stat_ic_notification"/> -->


            <!-- 알림 메시지 아이콘 색상 설정 방법 -->
            <meta-data
                    android:name="com.google.firebase.messaging.default_notification_color"
                    android:resource="@color/light_gray"/>
        </service>

        <receiver android:name=".app.AlarmReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLIED"/>
            </intent-filter>
        </receiver>

        <activity
                android:name=".view.main.taxisharelist.detail.TaxiShareInfoDetailActivity"
                android:label="@string/title_activity_taxi_share_info_detail"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="AIzaSyCIpEXk966QUDB_PswHP96bJIsW82tPPJ0"/>

        <activity android:name=".view.main.register.location.LocationSearchActivity">
        </activity>
        <activity android:name=".view.main.register.RegisterTaxiShareActivity">
        </activity>
        <activity android:name=".view.password.FindPasswordActivity">
        </activity>
        <activity
                android:name=".view.signup.SignUpActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".view.login.LoginActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".view.splash.SplashActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".view.main.MainActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
            </intent-filter>
        </activity>
    </application>

</manifest>