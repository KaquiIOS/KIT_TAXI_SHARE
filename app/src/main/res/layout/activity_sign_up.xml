<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.signup.SignUpActivity">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_signup_start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/start_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_signup_end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/end_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_signup_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintGuide_begin="@dimen/top_default"
            android:orientation="horizontal"/>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_layout_signup_test"
            android:hint="test"
            app:helperText="학번을 입력해주세요"
            style="@style/DefaultTextLayoutForm"
            app:layout_constraintStart_toStartOf="@id/guide_signup_start"
            app:layout_constraintTop_toTopOf="@id/guide_signup_top"
            app:layout_constraintEnd_toEndOf="@id/guide_signup_end">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_input_signup_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


    </com.google.android.material.textfield.TextInputLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>