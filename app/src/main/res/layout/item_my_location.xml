<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:padding="20dp">

    <Button android:id="@+id/btn_save_item_select"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/location_delete"
            android:background="@drawable/transparent_background_rec"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView android:id="@+id/tv_save_item_name"
              android:layout_marginTop="4dp"
              android:textSize="20sp"
              style="@style/HistoryItemDefaultStyle"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toStartOf="@id/btn_save_item_select"/>


    <TextView android:id="@+id/tv_save_item_location_name"
              android:layout_marginTop="4dp"
              style="@style/HistoryItemDefaultStyle"
              app:layout_constraintTop_toBottomOf="@id/tv_save_item_name"
              app:layout_constraintEnd_toStartOf="@id/btn_save_item_select"/>

    <TextView android:id="@+id/tv_save_item_road_address"
              android:layout_marginTop="4dp"
              style="@style/HistoryItemAddressStyle"
              app:layout_constraintTop_toBottomOf="@id/tv_save_item_location_name"
              app:layout_constraintEnd_toStartOf="@id/btn_save_item_select"/>

    <TextView android:id="@+id/tv_save_item_jibun_address"
              android:layout_marginTop="4dp"
              style="@style/HistoryItemAddressStyle"
              app:layout_constraintTop_toBottomOf="@id/tv_save_item_road_address"
              app:layout_constraintEnd_toStartOf="@id/btn_save_item_select"/>


</androidx.constraintlayout.widget.ConstraintLayout>