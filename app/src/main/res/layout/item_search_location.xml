<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@color/common_white"
                                                   android:padding="10dp">

    <TextView android:id="@+id/tv_search_item_name"
              android:layout_marginTop="4dp"
              style="@style/SearchItemDefaultStyle"
              app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:id="@+id/tv_search_item_road_address"
              android:layout_marginTop="4dp"
              style="@style/SearchItemAddressStyle"
              app:layout_constraintTop_toBottomOf="@id/tv_search_item_name"/>

    <TextView android:id="@+id/tv_search_item_jibun_address"
              android:layout_marginTop="4dp"
              style="@style/SearchItemAddressStyle"
              app:layout_constraintTop_toBottomOf="@id/tv_search_item_road_address"/>


</androidx.constraintlayout.widget.ConstraintLayout>