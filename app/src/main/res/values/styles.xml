<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/common_white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DefaultTextLayoutForm" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">7dp</item>
        <item name="boxCornerRadiusTopEnd">7dp</item>
        <item name="boxCornerRadiusBottomStart">7dp</item>
        <item name="boxCornerRadiusBottomEnd">7dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/common_blue</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="android:textColorHint">@color/common_blue</item>
    </style>

    <style name="DefaultTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

</resources>
