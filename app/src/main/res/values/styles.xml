<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/common_white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DefaultTextLayoutForm" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">7dp</item>
        <item name="boxCornerRadiusTopEnd">7dp</item>
        <item name="boxCornerRadiusBottomStart">7dp</item>
        <item name="boxCornerRadiusBottomEnd">7dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/common_gray</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="hintTextAppearance">@style/SignUpTextInputLayoutAppearance</item>
    </style>

    <style name="DefaultTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="SignUpTextInputLayoutAppearance">
        <item name="android:textColor">@color/common_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MainToolbarStyle" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:background">@color/common_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_toolbar_size</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="MainBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/warning_red</item>
        <item name="itemTextColor">@color/common_blue</item>

    </style>

    <style name="TaxiRegisterTextInputLayoutStyle" parent="DefaultTextLayoutForm">
        <item name="android:layout_marginTop">@dimen/top_default</item>
    </style>

    <style name="TaxiRegisterTextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/top_default</item>
        <item name="android:textSize">@dimen/register_default_text_size</item>
    </style>
    
    <style name="RegisterSpinnerStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
